<div class="member-list">

  <%= form_tag users_path, :method => :get do %>
    <p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search Near", :name => nil %>
    </p>
  <% end %>

  <ul>
    <% @users.each do |user| %>
      <li>
        <%= user.email %>
          <% if user.contact_info.present? %>
        <ul>
          <li><%= user.contact_info.first_name unless user.contact_info.first_name.blank? %></li>
          <li><%= user.contact_info.last_name unless user.contact_info.first_name.blank? %></li>
          <li><%= user.contact_info.home_address unless user.contact_info.first_name.blank? %></li>
          <li><%= user.contact_info.home_address_2 unless user.contact_info.first_name.blank? %></li>
          <li><%= user.contact_info.home_city unless user.contact_info.first_name.blank? %></li>
          <li><%= user.contact_info.home_state unless user.contact_info.first_name.blank? %></li>
          <li><%= user.contact_info.home_zip_code unless user.contact_info.first_name.blank? %></li>
          <li><%= user.contact_info.latitude %></li>
          <li><%= user.contact_info.longitude %></li>
        </ul>
      <% end %>

      </li>
    <% end %>
  </ul>
</div>

<div class="member-locations">
  <%= gmaps4rails(@json) %>
</div>
